<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".ui.taskmgmt.ui.Note">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Note"
        ></TextView>
    <EditText
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:minHeight="100dp"
        android:background="@drawable/edittext_selector"
        ></EditText>
    <CheckBox
        android:id="@+id/chkStarted"
        android:text="Mark As Work Started"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></CheckBox>
    <CheckBox
        android:id="@+id/chkProgress"
        android:text="Mark As Work In Progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></CheckBox>
    <CheckBox
        android:id="@+id/chk"
        android:text="Mark As Complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></CheckBox>

    <CheckBox
        android:visibility="gone"
        android:id="@+id/chkChangeDueDate"
        android:text="Change Due Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></CheckBox>

    <Button
        android:id="@+id/btnSave"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:text="Save"
        android:background="@drawable/button_selector"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">

    </Button>
</LinearLayout>