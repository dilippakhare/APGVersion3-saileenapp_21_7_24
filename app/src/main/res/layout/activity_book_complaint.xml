<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ui.complaint.BookComplaint">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">




        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Complaint Type"
                android:textColor="@android:color/black" />
            <Spinner
                android:layout_weight="0.9"
                android:id="@+id/spnType"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                style="@android:style/Widget.Holo.Light.Spinner"

                android:gravity="center"

                tools:ignore="NewApi"

                >
            </Spinner>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Complaints"
                android:textColor="@android:color/black" />
            <EditText
                android:layout_weight="0.9"
                android:id="@+id/edReason"
                android:inputType="textMultiLine"
                android:lines="4"
                android:padding="3dp"
                android:background="@drawable/edittext_selector"
                android:layout_width="match_parent"
                android:imeOptions="actionNext"
                android:layout_height="wrap_content">
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Equipment"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                />
            <Button
                android:layout_weight="0.9"
                android:id="@+id/edEqupment"

                android:padding="3dp"
                android:text="select"
                android:layout_width="match_parent"
                android:drawableRight="@drawable/ic_dropdown"
                android:imeOptions="actionNext"
                android:layout_height="wrap_content">
            </Button>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Person"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                />
            <EditText
                android:layout_weight="0.9"
                android:id="@+id/edContactPerson"

                android:padding="3dp"
               android:hint="Contact Person"
                android:layout_width="match_parent"
                android:background="@drawable/edittext_selector"
                android:imeOptions="actionNext"
                android:layout_height="wrap_content">
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Number"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                />
            <EditText
                android:layout_weight="0.9"
                android:id="@+id/edContactNumber"
                android:inputType="number"
                android:padding="3dp"
                android:hint="Number"
                android:layout_width="match_parent"
                android:background="@drawable/edittext_selector"
                android:imeOptions="actionNext"
                android:layout_height="wrap_content">
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attachment"
                android:layout_marginTop="40dp"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                />
            <LinearLayout
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgCamera"
                    android:layout_width="100dp"
                    android:layout_height="100dp"

                    android:inputType="number"
                    android:src="@android:drawable/ic_menu_camera"
                    android:padding="3dp"></ImageView>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"
            ></LinearLayout>
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:background="@drawable/button_selector"
            android:text="Save"
            android:textColor="@android:color/white">

        </Button>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>