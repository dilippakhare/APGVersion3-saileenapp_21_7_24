<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.customer.Helpline"
    android:background="#E0DEDE"
    tools:showIn="@layout/activity_helpline">
    <ImageView
        android:src="@drawable/help"
        android:layout_width="match_parent"
        android:layout_height="300dp">
    </ImageView>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_margin="10dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="5dp"
            android:src="@android:drawable/sym_action_call"
            android:layout_width="40dp"
            android:layout_height="40dp">
        </ImageView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="Office Helpline"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/txtCustomerSupport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nilesh Lambore"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/black"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/txtCustomerSupportNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9130098109"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/black"></TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l2"
        android:layout_margin="10dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="5dp"
            android:src="@android:drawable/sym_action_call"
            android:layout_width="40dp"
            android:layout_height="40dp">
        </ImageView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="Application Technical Help"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/txtAppSupport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kolhapur Office"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/black"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/txtAppSupportNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9011044811"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/black"></TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>